
<div class="container">
  <center><h2>Please sign up</h2></center>
  <%= form_with model: @user, url: signup_path do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <%@user.errors.full_messages do |error| %>
          <div class=""><%= error %></div>
        <% end %>
      </div>
    <% end %>
    <!-- </div> -->

    <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :email, "Email Address" %><br /><br />

          <%= f.email_field :email, :class => 'form-control' %>
        </div>
      </div>
    </div>
    <div class="field my-3">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :password, "Password" %><br />
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="field my-3">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :password, "Password_confirmation" %><br />
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="field my-3">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        </div>
      </div>
    </div>
    <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= f.submit "Sign up", :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>